@using Quarantine_Management.Function
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

<style>
    .container {
        display: block;
        position: relative;
        padding-left: 35px;
        margin-bottom: 12px;
        cursor: pointer;
        font-size: 12px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .profile-table {
        width: 100%;
        margin-top: 20px;
    }

        .profile-table th, .profile-table td {
            padding: 10px;
            text-align: left;
        }

        .profile-table th {
            background-color: #3dcd58;
            color: #fff;
        }

        .profile-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .profile-table input[disabled] {
            background-color: #fff;
            border: none;
        }

    /* Gaya untuk kartu */
    .profile-card {
        margin-top: 20px;
    }

    /* Gaya untuk kolom */
    .profile-col {
        margin-bottom: 20px;
    }
</style>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 mt-3">
                <div class="card profile-card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <div class="d-flex">
                                <h2 class="text-dark"><i class="fa fa-user"></i>&nbsp;My</h2>&nbsp;
                                <h2 class="text-dt">Profile</h2>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 profile-col">
                                <div class="card card-success card-outline h-100">
                                    <div class="card-body box-profile">
                                        <div class="text-center">
                                            <img src="~/assets/header.png" class="img-circle elevation-2 bg-white" alt="User Image">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9 profile-col">
                                <div class="card">
                                    <div class="card-body">
                                        <form class="form-horizontal profile-table">
                                            <div class="form-group row">
                                                <label class="col-sm-3 control-label">SESA ID</label>
                                                <div class="col-sm-9">
                                                    <input type="text" id="requestor" value='@HttpContextAccessor.HttpContext.Session.GetString("sesa_id")' class="form-control form-control-sm" disabled />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 control-label">Name</label>
                                                <div class="col-sm-9">
                                                    <input type="text" id="requestor" value='@HttpContextAccessor.HttpContext.Session.GetString("name")' class="form-control form-control-sm" disabled />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 control-label">Email</label>
                                                <div class="col-sm-9">
                                                    <input type="text" id="requestor" value='@HttpContextAccessor.HttpContext.Session.GetString("email")' class="form-control form-control-sm" disabled />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 control-label">Role</label>
                                                <div class="col-sm-9">
                                                    <input type="text" id="requestor" value='@HttpContextAccessor.HttpContext.Session.GetString("roles")' class="form-control form-control-sm" disabled />
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>